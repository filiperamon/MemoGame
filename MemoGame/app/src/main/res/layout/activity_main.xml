<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="4"
        android:columnOrderPreserved="true">

        <ImageButton
            android:id="@+id/btn_image_0x0"
            android:layout_column="0"
            android:layout_row="0"/>
        <ImageButton
            android:id="@+id/btn_image_1x0"
            android:layout_column="1"
            android:layout_row="0"/>
        <ImageButton
            android:id="@+id/btn_image_2x0"
            android:layout_column="2"
            android:layout_row="0"/>
        <ImageButton
            android:id="@+id/btn_image_3x0"
            android:layout_column="3"
            android:layout_row="0"/>
        <ImageButton
            android:id="@+id/btn_image_0x1"
            android:layout_column="0"
            android:layout_row="1"/>
        <ImageButton
            android:id="@+id/btn_image_1x1"
            android:layout_column="1"
            android:layout_row="1"/>
        <ImageButton
            android:id="@+id/btn_image_2x1"
            android:layout_column="2"
            android:layout_row="1"/>
        <ImageButton
            android:id="@+id/btn_image_3x1"
            android:layout_column="3"
            android:layout_row="1"/>
        <ImageButton
            android:id="@+id/btn_image_0x2"
            android:layout_column="0"
            android:layout_row="2"/>
        <ImageButton
            android:id="@+id/btn_image_1x2"
            android:layout_column="1"
            android:layout_row="2"/>
        <ImageButton
            android:id="@+id/btn_image_2x2"
            android:layout_column="2"
            android:layout_row="2"/>
        <ImageButton
            android:id="@+id/btn_image_3x2"
            android:layout_column="3"
            android:layout_row="2"/>
        <ImageButton
            android:id="@+id/btn_image_0x3"
            android:layout_column="0"
            android:layout_row="3"/>
        <ImageButton
            android:id="@+id/btn_image_1x3"
            android:layout_column="1"
            android:layout_row="3"/>
        <ImageButton
            android:id="@+id/btn_image_2x3"
            android:layout_column="2"
            android:layout_row="3"/>
        <ImageButton
            android:id="@+id/btn_image_3x3"
            android:layout_column="3"
            android:layout_row="3"/>
    </GridLayout>

</RelativeLayout>
