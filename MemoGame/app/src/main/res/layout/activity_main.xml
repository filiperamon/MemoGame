<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GameActivity">

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer:"
            android:textStyle="bold"
            android:paddingRight="5dp"
            android:layout_gravity="left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:id="@+id/textView" />

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView" />

        <TextView
            android:id="@+id/text_view_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/grid_layout_tabuleiro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_info"
        android:columnCount="6"
        android:rowCount="6"
        android:columnOrderPreserved="true"
        android:useDefaultMargins="true"
        android:foregroundGravity="center">

        <!--Coluna 1-->

        <ImageButton
            android:id="@+id/btn_image_0x0"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"
            />
        <ImageButton
            android:id="@+id/btn_image_1x0"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_2x0"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_3x0"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>

        <!--Coluna 2-->

        <ImageButton
            android:id="@+id/btn_image_0x1"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_1x1"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_2x1"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_3x1"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>

        <!--Coluna 3-->

        <ImageButton
            android:id="@+id/btn_image_0x2"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_1x2"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_2x2"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_3x2"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>

        <!--Coluna 4-->

        <ImageButton
            android:id="@+id/btn_image_0x3"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_1x3"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_2x3"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_3x3"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>

        <!--Coluna 5-->

        <ImageButton
            android:id="@+id/btn_image_4x0"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/btn_image_4x1"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/btn_image_4x2"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/btn_image_4x3"
            android:layout_column="3"
            android:layout_row="4"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"
            android:visibility="gone"/>

        <!--Coluna 6-->

        <ImageButton
            android:id="@+id/btn_image_5x0"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/btn_image_5x1"
            android:layout_column="1"
            android:layout_row="5"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/btn_image_5x2"
            android:layout_column="2"
            android:layout_row="5"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/btn_image_5x3"
            android:layout_column="3"
            android:layout_row="5"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"
            android:visibility="gone"
            />
    </GridLayout>

</RelativeLayout>
