<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_gravity="left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/grid_layout_tabuleiro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_info"
        android:columnCount="4"
        android:rowCount="4"
        android:columnOrderPreserved="true"
        android:useDefaultMargins="true">

        <ImageButton
            android:id="@+id/btn_image_0x0"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"
            android:background="@android:color/holo_blue_bright"
            />
        <ImageButton
            android:id="@+id/btn_image_1x0"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_2x0"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_3x0"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_0x1"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_1x1"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_2x1"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_3x1"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_0x2"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_1x2"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_2x2"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_3x2"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_0x3"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_1x3"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_2x3"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/btn_image_3x3"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="onClick"
            android:clickable="true"/>
    </GridLayout>

</RelativeLayout>
